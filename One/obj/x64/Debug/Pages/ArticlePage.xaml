<Page x:ConnectionId='1'
    x:Class="One.Pages.ArticlePage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:One.Pages"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:model="using:One.Model"
    mc:Ignorable="d">


    <!--<Page.Transitions>
        <TransitionCollection>
            <NavigationThemeTransition>
                <NavigationThemeTransition.DefaultNavigationTransitionInfo>
                    <DrillInNavigationTransitionInfo  />
                </NavigationThemeTransition.DefaultNavigationTransitionInfo>
            </NavigationThemeTransition>
        </TransitionCollection>
    </Page.Transitions>-->


    <Grid Background="White">

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="2*"/>
        </Grid.ColumnDefinitions>

        <VisualStateManager.VisualStateGroups>
            <VisualStateGroup>
                <VisualState x:ConnectionId='2' x:Name="Phone">
                    <VisualState.StateTriggers>
                        <AdaptiveTrigger MinWindowWidth="0"></AdaptiveTrigger>
                    </VisualState.StateTriggers>
                    <VisualState.Setters>

                        <Setter Target="Article_Detail.Grid.Column" Value="0"/>
                        <Setter Target="Article_Detail.Grid.ColumnSpan" Value="2"/>


                        <Setter Target="ArtcleContainer.Grid.Column" Value="0"/>
                        <Setter Target="ArtcleContainer.Grid.ColumnSpan" Value="2"/>

                        <Setter Target="DetailPageBackground.Visibility" Value="Collapsed"/>


                    </VisualState.Setters>
                </VisualState>
                <VisualState x:ConnectionId='3' x:Name="Desktop">
                    <VisualState.StateTriggers>
                        <AdaptiveTrigger MinWindowWidth="1000"></AdaptiveTrigger>
                    </VisualState.StateTriggers>
                    <VisualState.Setters>
                        <Setter Target="ArtcleContainer.Grid.Column" Value="0"/>
                        <Setter Target="ArtcleContainer.Grid.ColumnSpan" Value="1"/>

                        <Setter Target="Article_Detail.Grid.Column" Value="1"/>
                        <Setter Target="Article_Detail.Grid.ColumnSpan" Value="1"/>

                        <Setter Target="DetailPageBackground.Grid.Column" Value="1"/>
                        <Setter Target="DetailPageBackground.Grid.ColumnSpan" Value="1"/>

                    </VisualState.Setters>
                </VisualState>
            </VisualStateGroup>
        </VisualStateManager.VisualStateGroups>

        <Grid x:ConnectionId='4' Name="ArtcleContainer">
            <ScrollViewer Style="{StaticResource ScrollViewerCommonStyle}">
                <ListView x:ConnectionId='18' Name="StoryListView"
                                                          
                        ItemContainerStyle="{StaticResource ListViewItemContainerDefaultStyle}"
                                                           
                        IsItemClickEnabled="True"
                        Visibility="Visible"
                        ScrollViewer.VerticalScrollBarVisibility="Disabled"
                        >
                    <ListView.ItemTemplate>
                        <DataTemplate                               >
                            <Grid x:ConnectionId='19' MinHeight="100"
                              Padding="30,30,30,30">
                                <StackPanel Orientation="Horizontal">
                                    <StackPanel>
                                        <Ellipse Width="60"
                                            Height="60">
                                            <Ellipse.Fill>
                                                <ImageBrush x:ConnectionId='23'                                      ></ImageBrush>
                                            </Ellipse.Fill>
                                        </Ellipse>
                                    </StackPanel>
                                    <StackPanel Orientation="Vertical"
                                            Margin="15,0,0,0">
                                        <TextBlock x:ConnectionId='20'                      
                                               FontWeight="Bold"></TextBlock>
                                        <TextBlock x:ConnectionId='21'                                 
                                               FontSize="14"
                                               Margin="0,5,0,0"></TextBlock>
                                        <TextBlock x:ConnectionId='22'                        
                                               Margin="0,5,0,0"
                                               TextWrapping="Wrap"
                                               ></TextBlock>

                                    </StackPanel>
                                </StackPanel>
                            </Grid>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>
            </ScrollViewer>
        </Grid>

        <Grid x:ConnectionId='5' Name="DetailPageBackground"
              Background="White"
              >
            <Image Source="../Assets/images/oneisall.png"
                    Width="250"
                       Height="250"
                       />
        </Grid>


        <Grid x:ConnectionId='6' Name="Article_Detail"
              Background="White"
              Visibility="Collapsed">

            <ScrollViewer Style="{StaticResource ScrollViewerCommonStyle}">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="300"/>
                        <RowDefinition Height="auto"/>
                        <RowDefinition Height="auto"/>
                        <RowDefinition Height="auto"/>
                        <RowDefinition Height="auto"/>
                    </Grid.RowDefinitions>

                    <Grid Grid.Row="0">
                        <Image x:ConnectionId='16' Name="Article_Detail_Image"
                               Stretch="UniformToFill"
                               ></Image>
                        <Button x:ConnectionId='17' Name="Article_Detail_Image_DownLoadButton"
                                Width="50"
                                Height="50"
                                VerticalAlignment="Bottom"
                                HorizontalAlignment="Right"
                                Margin="0,0,5,0"
                                IsEnabled="True"
                                                                                 
                                Style="{StaticResource ButtonCommonStyle}">
                            <FontIcon FontFamily="Segoe MDL2 Assets"
                                      Glyph="&#xE118;" 
                                      Foreground="White"
                                      />
                        </Button>
                    </Grid>

                    <Grid Grid.Row="1"
                          Margin="30,30,0,0">
                        <TextBlock x:ConnectionId='15' Name="Article_Title"
                               FontSize="30"
                               Foreground="#333333"
                               IsTextSelectionEnabled="True">

                        </TextBlock>
                    </Grid>

                    <Grid Grid.Row="2"
                      Margin="30,20,0,20">
                        <TextBlock x:ConnectionId='14' Name="Article_Author"
                               Foreground="#333333"
                               IsTextSelectionEnabled="True">

                        </TextBlock>
                    </Grid>


                    <Border x:ConnectionId='8' BorderBrush="#666666"
                                Background="Transparent"
                                BorderThickness="1"
                                CornerRadius="2"
                                Padding="5"
                                Grid.Row="3"
                                Margin="30,15,30,0"
                                Name="ReaderContainer"
                                Visibility="Collapsed"
                                >

                        <Grid>

                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="auto"/>
                                <ColumnDefinition Width="auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <Button x:ConnectionId='10'                     
                                    Grid.Column="0"
                                    Style="{StaticResource ButtonCommonStyle}"
                                    VerticalAlignment="Center"
                                    >
                                <Image Source="../Assets/icon/voice.png"
                                       Stretch="UniformToFill"
                                       Width="25"
                                       Height="25"
                                       VerticalAlignment="Center"></Image>
                            </Button>

                            <StackPanel Grid.Column="1"
                                        Orientation="Horizontal">
                                <TextBlock Margin="5,0,0,0"
                                           VerticalAlignment="Center">
                                    有声朗读
                                </TextBlock>
                                <TextBlock Margin="5,0,5,0"
                                           VerticalAlignment="Center">
                                    |
                                </TextBlock>
                                <TextBlock x:ConnectionId='13' Margin="0,0,0,0"
                                           VerticalAlignment="Center"
                                           Name="ReaderName">
                                </TextBlock>
                            </StackPanel>

                            <TextBlock x:ConnectionId='11' Margin="0,0,10,0"
                                       Grid.Column="2"
                                       VerticalAlignment="Center"
                                       HorizontalAlignment="Right"
                                       Name="ReadTimeSpan"></TextBlock>

                            <MediaElement x:ConnectionId='12' Name="ArticleInfo_Media"
                                          AudioCategory="Media"
                                          >

                            </MediaElement>



                        </Grid>

                    </Border>


                    <Grid Grid.Row="4"
                          Padding="30,10,30,0">
                        <TextBlock x:ConnectionId='9' Name="Article_Content"
                               Foreground="#333333"
                               LineHeight="45"
                               TextWrapping="WrapWholeWords"
                               IsTextSelectionEnabled="True">

                        </TextBlock>
                    </Grid>
                    
                    
                </Grid>
            </ScrollViewer>


            <ProgressRing x:ConnectionId='7' Width="10"
                          Height="10"
                          Name='WaitArticleProgressRing'
                          Visibility="Collapsed"></ProgressRing>
            

        </Grid>


    </Grid>
</Page>

