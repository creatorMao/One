<Page
    x:Class="One.Pages.SettingPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:One.Pages"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">


    <Page.Transitions>
        <TransitionCollection>
            <NavigationThemeTransition>
                <NavigationThemeTransition.DefaultNavigationTransitionInfo>
                    <DrillInNavigationTransitionInfo  />
                </NavigationThemeTransition.DefaultNavigationTransitionInfo>
            </NavigationThemeTransition>
        </TransitionCollection>
    </Page.Transitions>


    <Grid Background="Black">
        
        <Grid Opacity="0.5">
            <Image Source="../Assets/images/about-page-bg2.png"
                   Stretch="UniformToFill"></Image>
        </Grid>

        <Grid MaxWidth="500"
              VerticalAlignment="Center"
              Padding="25"
              >
            
            

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="3*"/>
                <ColumnDefinition Width="1*"/>
            </Grid.ColumnDefinitions>

            <Grid.RowDefinitions>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="auto"/>
            </Grid.RowDefinitions>

            <TextBlock Grid.Row="0"
                       Grid.Column="0"
                       Text="设置"
                       Foreground="White"
                       FontSize="25"
                       />

            <TextBlock Grid.Column="0"
                       Grid.Row="1"
                       Text="磁贴"
                       Margin="0,25,0,0"
                       Foreground="White"
                       FontSize="16"
                       FontWeight="Thin"/>
            
            <TextBlock Grid.Column="0"
                       Grid.Row="2"
                       Text="动态磁贴"
                       VerticalAlignment="Center"
                       Foreground="White"
                       FontSize="16"
                       />

            <ToggleSwitch x:ConnectionId='1' Grid.Column="1"
                          Grid.Row="2"
                          OffContent="关"
                          OnContent="开"
                          IsEnabled="True"
                          Name="IsTileToggleSwitch"
                          Foreground="White"
                          Margin="28,0,0,0"
                          VerticalAlignment="Center" 
                          Style="{StaticResource ToggleSwitchCommonStyle}"
                                                  
                          >
                
            </ToggleSwitch>

            <TextBlock Grid.Column="0"
                       Grid.Row="3"
                       Text="通知"
                       Margin="0,20,0,0"
                       Foreground="White"
                       FontSize="16"
                       FontWeight="Thin"/>

            <TextBlock Grid.Column="0"
                       Grid.Row="4"
                       Text="复制/下载完成 提示"
                       VerticalAlignment="Center"
                       Foreground="White"
                       FontSize="16"
                       />

            <ToggleSwitch x:ConnectionId='2' Grid.Column="1"
                          Grid.Row="4"
                          OffContent="关"
                          OnContent="开"
                          Name="IsToastToggleSwitch"
                          IsEnabled="True"
                          Foreground="White"
                          Margin="28,0,0,0"
                          VerticalAlignment="Center"
                          Style="{StaticResource ToggleSwitchCommonStyle}"
                                                  
                          >

            </ToggleSwitch>

            <TextBlock Grid.Column="0"
                       Grid.Row="5"
                       Text="主题"
                       Margin="0,20,0,0"
                       Foreground="White"
                       FontSize="16"
                       FontWeight="Thin"/>

            <TextBlock Grid.Column="0"
                       Grid.Row="6"
                       Text="切换主题"
                       VerticalAlignment="Center"
                       Foreground="White"
                       FontSize="16"
                       />

            <ToggleSwitch x:ConnectionId='3' Grid.Column="1"
                          Grid.Row="6"
                          OffContent="白"
                          OnContent="黑"
                          Name="ThemeToggleSwitch"
                          IsEnabled="True"
                          Foreground="White"
                          Margin="28,0,0,0"
                          VerticalAlignment="Center"
                          Style="{StaticResource ToggleSwitchCommonStyle}"
                                                  
                          >

            </ToggleSwitch>





            <TextBlock Grid.Column="0"
                       Grid.Row="7"
                       Text="语言"
                       Foreground="White"
                       Margin="0,20,0,0"
                       FontSize="16"/>

            <ComboBox x:ConnectionId='4' Grid.Column="0"
                      Grid.ColumnSpan="2"
                      Grid.Row="8"
                      Margin="0,10,0,0"
                      Name="LanguageSwitchComboBox"
                      Foreground="White"
                      MinWidth="440" Style="{StaticResource ComboBoxComonStyle}"
                                                                                
                      >
                
            </ComboBox>


            <TextBlock Grid.Column="0"
                       Grid.Row="9"
                       Text="保存路径"
                       Foreground="White"
                       Margin="0,20,0,0"/>


            <TextBlock x:ConnectionId='5' Grid.Column="0"
                       Grid.Row="10"
                       Name="Folder"
                                                  
                       VerticalAlignment="Center"
                       Foreground="White"/>

            <Button x:ConnectionId='6' Grid.Column="1"
                    Grid.Row="10"
                    Content="修改保存路径"
                                        
                    Foreground="White"
                    VerticalAlignment="Center"
                    Style="{StaticResource ButtonCommonStyle}">
                
            </Button>

            <Button x:ConnectionId='7' Grid.Column="0"
                    Grid.Row="11"
                    Foreground="White"
                    FontSize="14"
                    Margin="0,0,0,0"
                    Padding="5,5,5,5"
                    Content="恢复默认设置"
                    Style="{StaticResource ButtonCommonStyle}"
                                                 >
                
            </Button>

            <TextBlock Grid.Row="12"
                       Foreground="White"
                       Grid.Column="0"
                       Opacity="0.8"
                       FontSize="13"
                       Margin="0,10,0,0"
                       Grid.ColumnSpan="2">//设置界面很多功能还没有完成，边学边做</TextBlock>


            



        </Grid>
        
    </Grid>
    
</Page>

