<Page x:ConnectionId='1'
    x:Class="One.Pages.MusicPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:One.Pages"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:data="using:One.Model"
    xmlns:Xaml="using:Microsoft.Graphics.Canvas.UI.Xaml"
    mc:Ignorable="d">

    <Page.Resources>

        
     

        <Storyboard x:ConnectionId='2' x:Name="MachineIconIn">
            <DoubleAnimation Storyboard.TargetName="MachineIcon"
                             Storyboard.TargetProperty="(MachineIcon.RenderTransform).(TranslateTransform.X)"
                             Duration="00:00:00.2"
                             From="0"
                             To="30">
                <DoubleAnimation.EasingFunction>
                    <PowerEase EasingMode="EaseOut"></PowerEase>
                </DoubleAnimation.EasingFunction>
            </DoubleAnimation>
        </Storyboard>

        <Storyboard x:ConnectionId='3' x:Name="MachineIconOut">
            <DoubleAnimation Storyboard.TargetName="MachineIcon"
                             Storyboard.TargetProperty="(MachineIcon.RenderTransform).(TranslateTransform.X)"
                             Duration="00:00:00.2"
                             From="30"
                             To="0">
                <DoubleAnimation.EasingFunction>
                    <PowerEase EasingMode="EaseOut"></PowerEase>
                </DoubleAnimation.EasingFunction>
            </DoubleAnimation>
        </Storyboard>

    </Page.Resources>

    <Grid Background="White"
          >

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="2*"/>
        </Grid.ColumnDefinitions>

        <VisualStateManager.VisualStateGroups>
            <VisualStateGroup>
                <VisualState x:ConnectionId='4' x:Name="Phone">
                    <VisualState.StateTriggers>
                        <AdaptiveTrigger MinWindowWidth="0"></AdaptiveTrigger>
                    </VisualState.StateTriggers>
                    <VisualState.Setters>

                        <Setter Target="ItemDetailsPannel.Grid.Column" Value="0"/>
                        <Setter Target="ItemDetailsPannel.Grid.ColumnSpan" Value="2"/>

                      

                        <Setter Target="ItemListContainer.Grid.Column" Value="0"/>
                        <Setter Target="ItemListContainer.Grid.ColumnSpan" Value="2"/>

                        <Setter Target="DetailPageBackground.Visibility" Value="Collapsed"/>




                    </VisualState.Setters>
                </VisualState>
                <VisualState x:ConnectionId='5' x:Name="Desktop">
                    <VisualState.StateTriggers>
                        <AdaptiveTrigger MinWindowWidth="1000"></AdaptiveTrigger>
                    </VisualState.StateTriggers>
                    <VisualState.Setters>
                        <Setter Target="ItemListContainer.Grid.Column" Value="0"/>
                        <Setter Target="ItemListContainer.Grid.ColumnSpan" Value="1"/>

                       

                        <Setter Target="ItemDetailsPannel.Grid.Column" Value="1"/>
                        <Setter Target="ItemDetailsPannel.Grid.ColumnSpan" Value="1"/>


                        <Setter Target="DetailPageBackground.Grid.Column" Value="1"/>
                        <Setter Target="DetailPageBackground.Grid.ColumnSpan" Value="1"/>




                    </VisualState.Setters>
                </VisualState>
            </VisualStateGroup>
        </VisualStateManager.VisualStateGroups>



        <Grid x:ConnectionId='6'  Name="ItemListContainer"
               Grid.Column="0"
               Grid.ColumnSpan="2"
               >
            <ScrollViewer x:ConnectionId='27' Style="{StaticResource ScrollViewerCommonStyle}"
                          Name="ItemListContainerScrollViewer"
                           >
                <ListView x:ConnectionId='28'                                 
                  Name="ItemListview"
                  Visibility="Visible"
                  IsItemClickEnabled="True"
                                                    
                  ScrollViewer.VerticalScrollBarVisibility="Disabled"
                  
                  >
                    <ListView.ItemTemplate>
                        <DataTemplate                              >
                            <Grid x:ConnectionId='29' MinWidth="400"
                                  Height="200"
                                  >
                                <StackPanel>
                                    <TextBlock x:ConnectionId='30'                           
                                           Foreground="Black"></TextBlock>

                                    <Image x:ConnectionId='31' Width="100"
                                       Height="100"
                                                              >

                                    </Image>
                                    <TextBlock x:ConnectionId='32'                      ></TextBlock>
                                </StackPanel>
                               
                                
                            </Grid>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>
            </ScrollViewer>

         

        </Grid>


        <Grid x:ConnectionId='7' Name="DetailPageBackground"
              Background="White"
              >
            <Image Source="../Assets/images/oneisall.png"
                   Width="250"
                   Height="250"
                       />
        </Grid>


        <Grid x:ConnectionId='8' Name="ItemDetailsPannel"
              Grid.Column="0"
              Grid.ColumnSpan="2"
              Background="White"
              Visibility="Collapsed"
              >

            <ScrollViewer Style="{StaticResource ScrollViewerCommonStyle}">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="300"/>
                        <RowDefinition Height="auto"/>
                        <RowDefinition Height="auto"/>
                        <RowDefinition Height="auto"/>
                        <RowDefinition Height="auto"/>
                    </Grid.RowDefinitions>

                    <Grid Grid.Row="0">
                        <Image x:ConnectionId='19' Name="Detail_Image"
                               Stretch="Fill"
                                                                     
                               ></Image>
                        <Grid>
                            <Rectangle x:ConnectionId='25' x:Name="WhiteMask" 
                                       Fill="White" />
                            <Xaml:CanvasControl x:ConnectionId='26' x:Name="Canvas" 
                                                />
                        </Grid>
                        <Grid>
                            <Grid Width="150"
                                  Height="150"
                                  VerticalAlignment="Center"
                                  HorizontalAlignment="Center"
                                  >
                                <Image x:ConnectionId='21' Name="MachineIcon"
                                       Width="140"
                                       Height="140"
                                       Margin="0,0,0,0"
                                       Source="../Assets/icon/music_disc.png"
                                       Stretch="Fill">
                                    <Image.RenderTransform>
                                        <TranslateTransform X="0"></TranslateTransform>
                                    </Image.RenderTransform>
                                </Image>
                                <Image x:ConnectionId='22' Name="CoverImage"
                                       Width="150"
                                       Height="150"
                                       Stretch="Fill"
                                       Visibility="Visible"></Image>
                                <Ellipse Width="50"
                                         Height="50"
                                         Fill="Black"
                                         Opacity='0.7'
                                         HorizontalAlignment="Center"
                                         VerticalAlignment="Center">
                                </Ellipse>
                                <Button x:ConnectionId='23' Width="50"
                                        Height="50"
                                        VerticalAlignment="Center"
                                        HorizontalAlignment="Center"
                                        Style="{StaticResource ButtonNoneStyle}"
                                                         
                                        >
                                    <Image x:ConnectionId='24' Source="../Assets/icon/play.png"
                                           Width="30"
                                           Height="30"
                                           VerticalAlignment="Center"
                                           HorizontalAlignment="Center"
                                           Name="PlayMusicButtonIcon"></Image>
                                </Button>
                            </Grid>
                        </Grid>
                        <MediaElement x:ConnectionId='20' Name="MusicPlayer"
                                      AudioCategory="Media"
                                      Source="../Assets/audio/music_bgm.flac"
                                      ></MediaElement>
                    </Grid>

                    <Grid Grid.Row="1"
                          Margin="30,30,30,0">
                        <TextBlock x:ConnectionId='18' Name="Article_Title"
                               FontSize="30"
                               Foreground="#333333"
                               IsTextSelectionEnabled="True"
                               TextWrapping="WrapWholeWords">

                        </TextBlock>
                    </Grid>

                    <Grid Grid.Row="2"
                      Margin="30,20,0,0">
                        <TextBlock x:ConnectionId='17' Name="Article_Author"
                               Foreground="#333333"
                               IsTextSelectionEnabled="True">

                        </TextBlock>
                    </Grid>

                    <Grid Grid.Row="3"
                          Padding="30,0,30,0">
                        <TextBlock x:ConnectionId='16' Name="Article_Content"
                               Foreground="#333333"
                               LineHeight="50"
                               TextWrapping="WrapWholeWords"
                               IsTextSelectionEnabled="True">

                        </TextBlock>
                    </Grid>

                    <!--评论模块-->
                    <Grid Grid.Row="4">
                        <ListView x:ConnectionId='9'                                               
                                  Name="CommentListView"
                                  HorizontalAlignment="Stretch"
                                  HorizontalContentAlignment="Stretch"
                                  
                                  >
                           
                            <ListView.ItemTemplate>
                                <DataTemplate                                            >
                                    <Grid x:ConnectionId='10' MinHeight="100"
                                          Padding="30"
                                          Name="CommentItemContainer"
                                          Background="Red"
                                          >
                                       

                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="auto"></RowDefinition>
                                            <RowDefinition Height="auto"></RowDefinition>
                                            <RowDefinition Height="auto"></RowDefinition>
                                        </Grid.RowDefinitions>

                                        <Grid 
                                              Grid.ColumnSpan="2"
                                              Grid.Row="0">
                                            <Ellipse Width="30"
                                                     Height="30"
                                                     HorizontalAlignment="Left">
                                                <Ellipse.Fill>
                                                    <ImageBrush x:ConnectionId='15'                                   ></ImageBrush>
                                                </Ellipse.Fill>
                                            </Ellipse>
                                            <TextBlock x:ConnectionId='13' HorizontalAlignment="Left"
                                                       Margin="40,0,0,0"
                                                                                    
                                                       VerticalAlignment="Center"></TextBlock>
                                            <TextBlock x:ConnectionId='14' HorizontalAlignment="Right"
                                                                                
                                                       VerticalAlignment="Center"></TextBlock>
                                        </Grid>

                                        <Grid Grid.Row="1"
                                              >
                                            <TextBlock x:ConnectionId='12' TextWrapping="WrapWholeWords"
                                                                              
                                                       Margin="0,10,0,0"></TextBlock>
                                        </Grid>

                                        <Grid Grid.Row="2"
                                              >
                                            <StackPanel HorizontalAlignment="Right">
                                                <TextBlock x:ConnectionId='11'                          ></TextBlock>
                                            </StackPanel>
                                        </Grid>

                                        
                                        
                                    </Grid>
                                </DataTemplate>
                            </ListView.ItemTemplate>
                            
                        </ListView>
                    </Grid>
                    
                </Grid>
            </ScrollViewer>


        </Grid>









    </Grid>
</Page>

